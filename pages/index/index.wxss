  margin:20rpx;

}
.mgrBtn{
  background:none;
  font-size:16px;
  border:1px solid #00FF66;
  color:#00FFCC;
  position:fixed;
  bottom:10px;
  width:70%;
  height:35px;
  line-height:32px;
}
.shareBtn{
  position:fixed;
  font-size:15px;
  height:32px;
  width:60px;
  left:82%;
  top:12px;
  border-radius:30px;
  line-height:32px;
  background-color: #009688;
  color: #FFF;
  z-index:19909909;
}

/**定义从右边向左边的移动的动画**/
@keyframes first{
  from{left: 100%; }
  to{left: -100%;}
}

.container{
  position: fixed;
  height: 100%;
  width: 100%;
  display:flex;
  flex-direction:column;
  align-items:center;/*垂直居中*/
  justify-content: center;/*水平居中*/
}

.change{
  display:inline-block;
  position:absolute;
  height:25px;
  line-height:23px;
  font-size:12px;
  background:none;
  color:#FFF;
  border:none;
  left:82%;
  margin-top:6px;
}